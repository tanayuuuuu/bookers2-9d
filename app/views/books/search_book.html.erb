<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <h2>Books category search</h2>
   <table>
    <thred>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
     </tr>
    </thred>
   <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %></td>
     <td><%= link_to book_path(book.id) %><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to book.category, search_book_path(keyword: book.category) %></td>
   <% end %>
    </tr>
   </tbody>
  </table>
  </div>
 </div>
</div>