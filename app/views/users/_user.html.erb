  <div class="col-md-3">
   <% if book.errors.any? %>
    <%= book.errors.count %>error
    <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        <th></th>
        </tr>
      </tbody>
    </table>
    <% if user.name != "guestuser" %>
    <div class="row">
      <%= link_to edit_user_path(user),class: "btn btn-outline-secondary btn-block edit_user_11572" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <lavel for="book_title">Title</lavel></br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <lavel for="book_body">Opinion</lavel></br>
        <%= f.text_area :body %></br>
      </div>
      <div class="form-group">
      <%= form_with model: @book, local: true do |f| %>
        <%= f.label :category,"Tag", class:"category-title" %></br>
        <%= f.text_field :category %>
      </div>
      <%= form_with(model: @book, local: true) do |f| %>
      <div class="star-form-group" id="star1">               <%#id要素の付与がポイント%>
        <%= f.label :star,'Rate', class:'star-title' %>　<%#保存したいカラムの指定%>
        <%= render "books/raty" %></br>
      <br>
      <%= f.submit "Create Book",class: "btn btn-success" %>
      <% end %>
      </div>
        <% end %>
        <% end %>
      <% end %>
  </div>